<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".clientes.VerPruebasActivity">



    <include layout="@layout/appbar_cool"></include>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_tiempo"
        android:elevation="10dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Tiempo:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/tv_tiempo"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:elevation="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="FASE 1:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Fecha:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_fecha_1"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <TextView
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Hora:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_hora_1"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/progres_foto_f1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="450dp">

            </ProgressBar>
            <ImageView
                android:visibility="gone"
                android:id="@+id/foto_1"
                android:layout_width="match_parent"
                android:layout_height="450dp">

            </ImageView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:layout_marginTop="5dp"
        android:background="@drawable/borde"
        android:id="@+id/btn_mapa_f1"
        android:text="Ver ubicacion fase 1"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5">


    </Button>

    <androidx.cardview.widget.CardView
        android:elevation="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_Fase2"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="FASE 2:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/card_fase2"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Fecha:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_fecha_2"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <TextView
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Hora:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_hora_2"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_fotofase2"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progres_foto_f2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="450dp">

            </ProgressBar>

            <ImageView
                android:visibility="gone"
                android:id="@+id/foto_2"
                android:layout_width="match_parent"
                android:layout_height="450dp">

            </ImageView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <Button
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:background="@drawable/borde"
        android:id="@+id/btn_mapa_f2"
        android:text="Ver ubicacion fase 2"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"/>

</LinearLayout>
</ScrollView>